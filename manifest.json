{
  // ============================
  // ✅ Chrome Extension Manifest V3 required version
  // ============================
  "manifest_version": 3,

  // ============================
  // ✅ Extension name as shown in Chrome
  // ============================
  "name": "YouTube Playlist Auto-Arranger",

  // ✅ Version of your extension
  "version": "1.0.1",

  // ✅ Description shown in Chrome Extensions page and Web Store
  "description": "Sort and reorder YouTube playlists by title, upload date, or duration. Save custom orders and access them later.",

  // ============================
  // ✅ Permissions your extension needs
  // ============================
  "permissions": [
    "storage",    // Save custom orders locally
    "activeTab",  // Access the current tab
    "scripting"   // Dynamically inject scripts
  ],

  // ============================
  // ✅ Which sites your extension can run on
  // ============================
  "host_permissions": [
    "https://www.youtube.com/*"
  ],

  // ============================
  // ✅ Defines the browser action (toolbar icon)
  // ============================
  "action": {
    "default_popup": "popup.html",       
    // File for the popup UI

    "default_title": "YouTube Playlist Auto-Arranger"
    // Tooltip when hovering over the extension icon
  },

  // ============================
  // ✅ Background service worker
  // ============================
  "background": {
    "service_worker": "background.js"    
    // Handles events like tab updates
  },

  // ============================
  // ✅ Content scripts to run on YouTube pages
  // ============================
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],  
      // Which URLs to inject into

      "js": ["content_script.js"],               
      // Your main sorting logic script

      "css": ["overlay.css"],                    
      // Styling for the floating overlay button and panel

      "run_at": "document_idle"                  
      // When to run (after page load)
    }
  ]
}
